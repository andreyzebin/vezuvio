#!/bin/bash -pu
set -u

# Fail fast with concise message when not using bash
# Single brackets is needed here for POSIX compatibility
# shellcheck disable=SC2292
if [ -z "${BASH_VERSION:-}" ]
then
  echo "Error: Bash is required to run vezuvio." >&2
  exit 1
fi

set +o posix # as we are using bash now

# Fail fast with concise messages when PWD has issues
if [[ -z "${PWD-}" ]]
then
  echo "Error: \$PWD must be set to run vezuvio." >&2
  exit 1
fi
if ! [[ -d "${PWD}" ]]
then
  echo "Error: The current working directory must exist to run vezuvio." >&2
  exit 1
fi
if ! [[ -r "${PWD}" ]]
then
  echo "Error: The current working directory must be readable to ${USER} to run vezuvio." >&2
  exit 1
fi

# Fail fast with concise message when HOME is unset
if [[ -z "${HOME:-}" ]]
then
  echo "Error: \$HOME must be set to run vezuvio." >&2
  exit 1
fi


# Absolute path to this script, e.g. /home/user/bin/foo.sh
# SCRIPT=$(readlink -f "$0")
# Absolute path this script is in, thus /home/user/bin
# SCRIPTPATH=$(dirname "$SCRIPT")

# shellcheck disable=SC2116
VEZUVIO_HOME_DEFAULT=$(echo ~/.vezuvio)
VEZUVIO_HOME=$VEZUVIO_HOME_DEFAULT

currentDir=$(pwd)
# Check the number of arguments
if [ "$#" -lt 1 ]; then
    echo "Missing arguments"
    echo "Usage: vezuvio <arg1> <arg2>"
    exit 1
fi

if [ "$#" -eq 1 ]; then
    cd "${VEZUVIO_HOME}"/repository || exit
    ./gradlew clean -PisProduction=1 -Dorg.gradle.logging.level=quiet --console=plain app:run --args="$1"
    cd "${currentDir}"  || exit
elif [ "$#" -eq 2 ]; then
    cd "${VEZUVIO_HOME}"/repository || exit
    ./gradlew clean -PisProduction=1 -Dorg.gradle.logging.level=quiet --console=plain app:run --args="$1 $2"
    cd "${currentDir}"  || exit
elif [ "$#" -eq 3 ]; then
    cd "${VEZUVIO_HOME}"/repository || exit
    ./gradlew clean -PisProduction=1 -Dorg.gradle.logging.level=quiet --console=plain app:run --args="$1 $2 $3"
    cd "${currentDir}" || exit
else
    echo "Too many arguments"
    echo "Usage: vezuvio <arg1> <arg2>"
    exit 1
fi

